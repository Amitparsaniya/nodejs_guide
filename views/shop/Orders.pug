doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{pageTitle}
        link(rel="stylesheet", href="/css/main.css")
        link(rel="stylesheet", href="/css/form.css")
        link(rel="stylesheet", href="/css/product.css")

    body 
        header.main-header 
            ul.main-header__item-list
                 li.main-header__item
                    a.main-header__item(href="/") Shop
                 li.main-header__item
                    a.main-header__item(href="/product") Product
                 if(isAuthenticated)
                    li.main-header__item
                        a.main-header__item(href="/add-product") Add Product
                    li.main-header__item
                        a.main-header__item(href="Admin-Product") Admin Product  
                 li.main-header__item
                    a.main-header__item(href="order") Order
                 li.main-header__item
                    a.main-header__item(href="cart") Cart
            ul.main-header__item-list
                    if(!isAuthenticated)
                        li.main-header__item
                            a.main-header__item(href="/login") login
                    else 
                         li.main-header__item
                            form(action="/logout", method="post")
                               input(type="hidden" name= "_csrf" value='csrfToken')
                               button(type="submit") LogOut 
        main         
            if prods.length >0
                .grid 
                    each order in prods
                        article.card.product-Item 
                               each p in order.products
                                    h1.product__title Order # #{order._id}
                                    h2.product__title #{p.product.title}
                                    p.product_title  Quantity :  #{p.quantity}
                                    P.product_title  Price : #{p.product.price}  
                                    a(href=`/order/${order._id}`) Invoice 

                            
                                

 

                         





                    
